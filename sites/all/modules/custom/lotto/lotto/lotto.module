		$header .= "<th id='".$x."'>".$x."</th>";
		//$header .= "<th></th>";
		$x++;
	    }
	    $header .="</tr>";
	    
	    $body="";
		if ($lottery_stats_id == 1){
		    $last_stats = lotto_stats_last_stat_available($lottery_name, $stat_type);
		    $lottery_stats_id = $last_stats['lksid'];
		}
	    
	    while($y <= $number_of_draws){	
