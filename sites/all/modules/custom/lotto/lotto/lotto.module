		$previous_stats = null;
		$previous_stats = $current_stats;
		$current_stats = null;
		//
		$y++;$x=1;
	    }
	     
	    break;
	case 'lotto_keno':
	    $x=1; $y=0; $z=80;
	    $header = "<tr><th></th>";
